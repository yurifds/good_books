
<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Books</h3>
    </div>
</div>

<!-- /.row -->
<hr>

<!-- Page Features -->
<div class="row text-center">
  <% Book.all.each do |book| %>
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <%= image_tag book.image_book.url(:thumb) %>
            <div class="caption">
                <h3><%= book.title %></h3>
                <p><%= truncate(book.description, length: 50) %></p>
                <p>
                  <a href="#" class="btn btn-primary">Buy Now!</a>
                </p>
            </div>
        </div>
    </div>
  <% end  %>
</div>
