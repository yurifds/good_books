          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: '3'%>
        </div>
        <%= f.submit 'Deixe um comentÃ¡rio' , class: 'btn btn-success'%>
      <% end %>
    </div>
  <% else %>
    <%= link_to 'Logue para comentar', new_user_session_path %>
  <% end %>
    <hr>
    <% @book.comments.each do |comment| %>
      <div class="row">
          <div class="col-md-12">
            <h4><%= comment.user.name_and_last_name %></h4>
