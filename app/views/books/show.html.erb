
<script type="text/javascript">
  <%= render 'show.js.erb'%>
</script>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @book.title %>
    </h1>
  </div>
</div>
<!-- /.row -->

<!-- Portfolio Item Row -->
<div class="row" style="height:430px">
  <div class="col-md-4">
    <%= image_tag @book.image_book.url(:medium) %>
    <% if user_signed_in? %>
      <div id="my_rating_book" style="margin-left: 84px;"></div>
    <% else %>
      <p>
        <%= link_to 'Logue para avaliar', new_user_session_path %>
      </p>
    <% end %>
  </div>

  <div class="col-md-6">
    <h3><%= @book.title %></h3>
    <p>
      <div id="average_rating"></div>
      <%= link_to @book.amount_of_ratings %>
    </p>
    <p><%= @book.description %></p>
    <h3>Adquira o seu em:</h3>
    <div class="form-group">
      <%= select_tag "category",
          options_for_select(Category.all.collect {|category| [ category.name, category.id ] }),
        class:'btn dropdown-toggle btn-default' %>
        <% if can?(:manage, :all) %>
          <%= link_to 'Editar livro', edit_book_path(@book), class: 'btn btn-primary'%>
          <%= link_to 'Remover livro', @book, class: 'btn btn-primary', method: :delete, data: { confirm: "Tem certeza que deseja remover esse livro ?" } %>
        <% end %>
    </div>
  </div>
</div>
<div class="well">
  <% if user_signed_in?  %>
    <div class="text-left">
      <%= form_for [@book, @comment] do |f| %>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: '3'%>
        </div>
        <%= f.submit 'Deixe um comentÃ¡rio' , class: 'btn btn-primary'%>
      <% end %>
    </div>
  <% else %>
    <%= link_to 'Logue para comentar', new_user_session_path %>
  <% end %>
    <hr>
    <!-- Partial of comments -->
    <%= render @book.root_comments %>
</div>
