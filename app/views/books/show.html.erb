<!-- Portfolio Item Row -->
<div class="row" style="height:430px">
  <div class="col-md-4">
    <%= image_tag @book.image_book.url(:medium) %>
    <% if user_signed_in? %>
      <div id="my_rating_book" style="margin-left: 84px;"></div>
    <% else %>
      <p>
        <%= link_to 'Logue para avaliar', new_user_session_path %>
      </p>
    <% end %>
  </div>

  <div class="col-md-6">
    <h3><%= @book.title %></h3>
    <p>
      <div id="average_rating">
      </div>
      <%= link_to @book.amount_of_ratings %>
    </p>
    <p><%= @book.description %></p>
    <h3>Adquira o seu em:</h3>
    <div class="form-group">
      <%= select_tag "category",
          options_for_select(Category.all.collect {|category| [ category.name, category.id ] }),
        class:'btn dropdown-toggle btn-default' %>
    </div>
  </div>
</div>
<div class="well">
  <% if user_signed_in?  %>
    <div class="text-left">
      <%= form_for [@book, @comment] do |f| %>
