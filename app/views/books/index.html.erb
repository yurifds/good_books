  <%= render 'index.js.erb'%>
</script>
<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Livros</h3>
    </div>
</div>

<hr>

<!-- Page Features -->
<div class="row text-center">
  <% @books.each do |book| %>
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
          <%= link_to image_tag(book.image_book.url(:thumb)), book_path(book) %>
          <div class="caption">
            <div id="book_rating_readonly<%= book.id %>"></div>
            <h4><%= truncate(book.title, length: 20) %></h4>
            <p><%= truncate(book.description, length: 80) %></p>
          </div>
        </div>
    </div>
  <% end  %>
</div>
