<%= link_to book_path(book) do%>
  <div class="col-md-3 col-sm-6 hero-feature">
      <div class="thumbnail">
        <%= image_tag(book.image_book.url(:thumb))%>
        <div class="caption">
          <div id="book_rating_readonly<%= book.id %>"></div>
          <h4><%= truncate(book.title, length: 20) %></h4>
          <p><%= truncate(book.description, length: 80) %></p>
        </div>
      </div>
  </div>
<% end %>
